{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Colophon Schema",
  "description": "JSON Schema for Colophon",
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "contact": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/nonEmptyString"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "contacts": {
      "oneOf": [
        {
          "$ref": "#/definitions/contact"
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/contact"
          }
        }
      ]
    }
  },
  "type": "object",
  "required": [
    "version",
    "about",
    "contacts"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "title": "Colophon Schema Version",
      "description": "Used to determine what Colophon schema version to validate against",
      "type": "string",
      "pattern": "\\bv?(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)(?:-[\\da-z-]+(?:\\.[\\da-z-]+)*)?(?:\\+[\\da-z-]+(?:\\.[\\da-z-]+)*)?\\b"
    },
    "about": {
      "title": "About",
      "description": "defines the context of \"What\" this application is",
      "type": "object",
      "properties": {
        "id": {
          "title": "id",
          "description": "A unique, deterministic identifier for this application",
          "$ref": "#/definitions/nonEmptyString"
        },
        "title": {
          "title": "title",
          "description": "Unique name representing the application",
          "$ref": "#/definitions/nonEmptyString"
        },
        "description": {
          "title": "name",
          "description": "Snippet describing the application in detail",
          "$ref": "#/definitions/nonEmptyString"
        }
      }
    },
    "contacts": {
      "title": "Contacts",
      "description": "defines the context of \"Who\" this application belongs to",
      "type": "object",
      "properties": {
        "departments": {
          "title": "Departments",
          "description": "array of departments this application belongs to",
          "$ref": "#/definitions/contacts"
        },
        "teams": {
          "title": "team(s) this application belongs to",
          "description": "individual team name or array of team names",
          "$ref": "#/definitions/contacts"
        },
        "humans": {
          "title": "individual(s) this application belongs to",
          "description": "individual person name or array of person names",
          "$ref": "#/definitions/contacts"
        }
      }
    },
    "schedule": {
      "title": "Schedule",
      "description": "defines the context of \"When\" activities around this application are planned",
      "type": "object",
      "properties": {
        "patternProperties": {
          ".*": {
            "type": "string",
            "format": "date-time"
          },
          "launch": {
            "title": "Launch Date",
            "description": "Launch date for this application",
            "type": "string",
            "format": "date-time"
          },
          "sunset": {
            "title": "Sunset Date",
            "description": "Sunset date for this application",
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "environments": {
      "title": "Environments",
      "description": "defines the context of \"Where\" this application is",
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "title": "Environment",
          "description": "Environment Information",
          "properties": {
            "title": {
              "title": "Title",
              "description": "Environment Title",
              "$ref": "#/definitions/nonEmptyString"
            },
            "description": {
              "title": "description",
              "description": "Environment Description",
              "$ref": "#/definitions/nonEmptyString"
            },
            "uri": {
              "title": "Environment URI",
              "description": "Environment URI",
              "type": "string",
              "format": "uri"
            }
          }
        }
      }
    }
  }
}
